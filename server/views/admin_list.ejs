    <title>Liste des commandes</title>
</head>

<body>
    <!-- <%=JSON.stringify(persons);%> -->
    <!-- <header>
                <% include ./header %>
        </header> -->

    <div id="select_qg_div">
        <label for="select_qg">Ici c'est </label>
        <select id="select_qg" name="select_qg">
            <option value="Chez Maxime">Chez Maxime</option>
            <option value="Chez Jules">Chez Jules</option>
            <!-- <option value="Chez Laura">Chez Laura</option> -->
        </select>
    </div>
    <div id="toggle_archived_div">
        <input type="button" id="toggle_archived" value="Afficher les koh'mmandes archivées ou refusées">
    </div>
    <div id="toggle_ptitdej_div">
        <input type="button" id="toggle_ptitdej" value="Cacher les petits déj">
    </div>
    <hr>
    <h1>Liste Des koh'mmandes</h1>
    <!--<p><%= JSON.stringify(commands) %></p>-->
    <% for(c in commands) {%>
    <!-- <p><%=JSON.stringify(commands[c])%></p> -->
    <div class="command <%=commands[c]['state']%>" id="<%=commands[c]['id']%>" email="<%=commands[c]['email']%>">
        <b class="<%=commands[c]['sos_type']%>">Type de SOS :
            <%=commands[c]['sos_type']%></b>
        <p>Date de création : <%=commands[c]['created_at']%></p>
        <p>Quantité :
            <%=commands[c]['amount']%>
        </p>
        <p>Adresse de livraison:
            <%=commands[c]['delivery_adress']%> 
            <a href="https://www.google.com/maps/place/<%=commands[c]['delivery_adress']%>" target="_blank">lien Google
                Maps</a>
        </p>
        <p>Numéro de téléphone :
            <%= commands[c]['phone'];%>
        </p>
        <p>Nom :
            <%= commands[c]['full_name']%>
        </p>
        <p>Heure demandée :
            <%=commands[c]['delivery_hour']%>
        </p>
        <p>Informations additionnelles :
            <%=commands[c]['additional_informations']%>
        </p>
        <p>ID de la commande :
            <%=commands[c]['id']%>
        </p>
        <%if(commands[c]['last_modif_qg']) {%>
        <p>Dernier QG ayant modifié cette commande :
            <%=commands[c]['last_modif_qg']%>
        </p>
        <%}%>
        <!-- TODO: translate state -->
        <p class="command_state">Etat de la commande :
            <%=commands[c]['state']%>
        </p>
        <div class="assign_to_div">
            <p><%if(commands[c]['assigned_to']){%>Assigné à <%=commands[c]['assigned_to']%><%}%></p>
            <select class="assign_to">
                <%for(p in persons){%>
                <option value="<%=persons[p].email%>">
                    <%=persons[p].name%>
                </option>
                <%}%>
            </select>
            <input type="button" class="submit_assign_to" value="Assigner">
        </div>
        <div class="change_state">
            Changer l'état :
            <select class="select_state">
                <option value="waiting">En attente</option>
                <option value="accepted">Acceptée</option>
                <option value="preparing">En préparation</option>
                <option value="delivering">En livraison</option>
                <option value="archived">Archivée</option>
                <option value="declined">Refusée</option>
            </select>
            <textarea class="state_change_reason" style="display: none"></textarea>
            <input type="button" value="Valider" class="submit_change_state">
        </div>
        <hr>
    </div>
    <%}%>
    <!-- footer -->
    <div>
        <!-- <% include ./footer %> -->
    </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
